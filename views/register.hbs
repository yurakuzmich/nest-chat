<html>
  <head>
    <meta charset="utf-8" />
    <title>Chat App</title>

    <style>
      * {
        margin: 0;
        padding: 0;
        font-size: 20px;
      }

      body {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 15px;
      }

      .register-form {
        width: 500px;
        border: 1px solid gray;
        border-radius: 15px;
        padding: 20px;
      }

      input, button {
        border-radius: 5px;
        line-height: 1.3rem;
      }

    </style>
  </head>
  <body>
    <div class="register-form">
      <form method="post" action="/auth/register" id="register-form">
        <input type="text" name="name" placeholder="Enter you name">
        <input type="email" name="email" placeholder="Enter email">
        <input type="password" name="pass" placeholder="Very strong Password">
        <button type="submit">Register</button>
      </form>
    </div>
  </body>
</html>